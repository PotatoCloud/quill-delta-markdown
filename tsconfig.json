{
  "compilerOptions": {
    // project options
    "lib": [
      "ESNext",
      "dom"
    ],
    "outDir": "./lib",
    "removeComments": true,
    "target": "ES6",

    // Module resolution
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {},

    // Source Map
    "sourceMap": true,
    "sourceRoot": "/",

    // Strict Checks
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,

    // Linter Checks
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Declaration Files
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./lib"
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*"
  ]
}